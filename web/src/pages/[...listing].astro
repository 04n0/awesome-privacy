    font-size: 2rem;
    margin: -2rem 0 1rem -2rem;
    box-shadow: 6px 6px 0 var(--foreground);
    background: var(--accent);
    color: var(--accent-fg);
    width: fit-content;
    padding: 0.25rem 0.5rem;
  }

.service-head {
  h2 {
    font-size: 3rem;
    margin: 0;
  }
  .url-wrap {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    a {
      font-size: 1.2rem;
    }
    .follow-with {
      font-style: italic;
      opacity: 0.6;
    }
  }
  
